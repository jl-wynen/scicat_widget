    "dependencies": {},
    "devDependencies": {
        "@anywidget/types": "^0.2.0",
        "esbuild": "^0.25.4",
        "prettier": "^3.7.4",
        "typescript": "^5.8.3"
    },
    "prettier": {
        "printWidth": 88,
        "tabWidth": 4
    }
}
